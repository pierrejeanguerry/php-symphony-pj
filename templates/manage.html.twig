{% extends 'base.html.twig' %}

{% block content %}
    
    {% for item in pagination %}
        <div class="h-[9%]">
            {{ item.id }}
            {{ item.name }}
            {{ item.description }}
            {{ item.publicationDate|date("m/d/Y") }}
            {% if app.user.role == "Ã©diteur" %}
            <form action="{{ path('validate_item',{'id': item.id} )}}" method="post">
                <button type="submit" class="inline-block border border-green-500 rounded py-1 px-3 bg-green-500 text-white">Validate</button>
            </form>
                <a href="{{path('modify_item')}}" class="inline-block border border-yellow-500 rounded py-1 px-3 bg-yellow-500 text-white">Modify</a>
