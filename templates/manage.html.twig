            {% endif %}
        </div>
    {% endfor %}

    <div class="pagination" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
